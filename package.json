        "eslint-plugin-vue": "^10.3.0",
        "globals": "^16.3.0",
        "lightningcss": "^1.30.1",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "stylelint": "^16.21.1",
        "stylelint-config-recess-order": "^7.1.0",
        "stylelint-config-recommended-vue": "^1.6.1",
        "stylelint-config-standard": "^38.0.0",
