        "eslint-plugin-vue": "^10.5.0",
        "globals": "^16.4.0",
        "lightningcss": "1.30.1",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "stylelint": "^16.25.0",
        "stylelint-config-recess-order": "^7.3.0",
        "stylelint-config-recommended-vue": "^1.6.1",
        "stylelint-config-standard": "^39.0.1",
