        "@unocss/eslint-plugin": "^66.5.2",
        "@vitejs/plugin-vue": "^6.0.1",
        "crx": "^5.0.1",
        "dotenv": "^17.2.3",
        "eslint": "^9.37.0",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import-x": "^4.16.1",
