        "@unocss/eslint-plugin": "^66.3.3",
        "@vitejs/plugin-vue": "^6.0.0",
        "crx": "^5.0.1",
        "dotenv": "^17.2.0",
        "eslint": "^9.31.0",
        "eslint-import-resolver-typescript": "^4.4.4",
